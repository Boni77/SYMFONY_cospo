{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>

<div class="container form-login">
  
  <div class="form ">
    <span class="icon"><i class="fas fa-users"></i></span>
    <h2 class="heading-2">Member login</h2>
   <form action="">
     <div class="input-item">
       <label for="username" class="label"><i class="fas fa-user"></i></label>
     <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
     </div>
     <div class="input-item">
       <label for="password" class="label"><i class="fas fa-lock"></i></label>
     <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
     </div>
    
    <button type="submit" class="btn submit-login">Login</button>
     <input type="checkbox" name="remember" id="remember" class="checkbox">
     <label for="remember" class="checkbox-label">Remember me?</label>
    </form>
     <h3 class="heading-3">Don't have an account? <a href="#" class="link link-register">Register here</a></h3>
  </div>
  
</div>
<div class="container form-register">
  <div class="form">
    <span class="icon"><i class="fas fa-users"></i></span>
    <h2 class="heading-2">Member register</h2>
   <form action="">
     <div class="input-item">
       <label for="email" class="label"><i class="fas fa-envelope"></i></label>
     <input type="text" name="email" id="email" class="input" placeholder="Email">
     </div>
     <div class="input-item">
       <label for="username-reg" class="label"><i class="fas fa-user"></i></label>
     <input type="text" name="username-reg" id="username-reg" class="input" placeholder="Username">
     </div>
     <div class="input-item">
       <label for="password-reg" class="label"><i class="fas fa-lock"></i></label>
     <input type="password" name="password-reg" id="password-reg" class="input" placeholder="**********">
     </div>
    
    <button type="submit" class="btn submit-register">Register</button>
    </form>
     <h3 class="heading-3">Already have an account? <a href="#" class="link link-login">Login here</a></h3>
  </div>
</div>
<div class="bg bg-orange"></div>

<div class="main-page">
  <h1 class="heading-main">Welcome <span class="username">name</span></h1>
  <p class="text">Your new email address is <span class="email">email@gmail.com</span></p>
  <p class="text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Vel ea perferendis qui ab quod, nostrum illum velit nesciunt voluptatibus vitae asperiores doloremque! Quidem rerum alias quia error. Totam, laboriosam distinctio.</p>
  <a href="#" class="btn-started">Lets get started</a>
</div>
{% endblock %}
