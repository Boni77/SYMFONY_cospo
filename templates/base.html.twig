<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
			<script src="js/script.js" defer></script>
		{% endblock %}

		{% block javascripts %}
			<script src="{{ asset('js/script.css') }}"></script>
			<script src="https://kit.fontawesome.com/81ab4e445e.js" crossorigin="anonymous"></script>
		{% endblock %}
	</head>

	<header>
		<nav>
			<a id="link" href="#">
				<span id="burger"></span>
			</a>
      
      <ul class="list">
        <li>
          <a href="{{ path('app_accueil')}}">ACCUEIL</a>
        </li>
        <li>
          <a href="#">PROFIL</a>
        </li>
      </ul>
   
			<div class="nav-right">
				{% if app.user %}
					<img src="img\namaste.png" width="40px">
					Bienvenue
					{{ app.user.pseudo }}
					<a class="nav-link" href="{{ path('app_logout')}}">
						<div class="rouge">Deconnexion
							<i class="fa-solid fa-arrow-right-from-bracket"></i>
						</div>
					</a>

				{% else %}
					<a href="{{ path('app_login')}}">Connexion |</a>
					<a href="{{ path('app_register')}}">Inscription</a>
				{% endif %}
			</div>
		</nav>
	</header>

	<body>
		<div class="wrapper"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
